<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".validQRActivity">

    <!-- Texto de validación por reconocimiento facial -->

    <TextView
        android:id="@+id/textValidacion"
        android:layout_width="336dp"
        android:layout_height="67dp"
        android:fontFamily="sans-serif"
        android:text="Validación por reconocimiento facial"
        android:textAlignment="center"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="263dp"
        android:layout_height="353dp"
        android:layout_marginTop="35dp"
        app:layout_constraintBottom_toTopOf="@+id/textInstruccion"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textValidacion"
        app:srcCompat="@drawable/facial" />

    <TextView
        android:id="@+id/textInstruccion"
        android:layout_width="319dp"
        android:layout_height="55dp"
        android:layout_marginTop="35dp"
        android:fontFamily="sans-serif"
        android:text="Por favor a continuación colocar su rostro en el centro del cuadrado"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/botonContinuar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <Button
        android:id="@+id/botonContinuar"
        android:layout_width="318dp"
        android:layout_height="56dp"
        android:layout_marginTop="30dp"
        android:fontFamily="sans-serif"
        android:text="COMENZAR"
        android:textSize="18sp"
        android:textStyle="bold"
        android:background="@drawable/botonrectangular"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInstruccion" />

</androidx.constraintlayout.widget.ConstraintLayout>
